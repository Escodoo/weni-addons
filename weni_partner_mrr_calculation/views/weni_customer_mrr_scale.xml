<odoo>

    <record model="ir.ui.view" id="weni_customer_mrr_scale_form_view">
        <field
            name="name"
        >weni.customer.mrr.scale.form (in weni_contacts_custom)</field>
        <field name="model">weni.customer.mrr.scale</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="min_value" />
                        <field name="max_value" />
                    </group>
                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="weni_customer_mrr_scale_search_view">
        <field
            name="name"
        >weni.customer.mrr.scale.search (in weni_contacts_custom)</field>
        <field name="model">weni.customer.mrr.scale</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="weni_customer_mrr_scale_tree_view">
        <field
            name="name"
        >weni.customer.mrr.scale.tree (in weni_contacts_custom)</field>
        <field name="model">weni.customer.mrr.scale</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="min_value" />
                <field name="max_value" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="weni_customer_mrr_scale_act_window">
        <field name="name">Customer MRR Scale</field>
        <field name="res_model">weni.customer.mrr.scale</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="weni_customer_mrr_scale_menu">
        <field name="name">Customer MRR Scale</field>
        <field name="parent_id" ref="contacts.res_partner_menu_config" />
        <field name="action" ref="weni_customer_mrr_scale_act_window" />
        <field name="sequence" eval="90" />
    </record>

</odoo>
