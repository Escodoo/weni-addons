<odoo>

    <record model="ir.ui.view" id="crm_case_form_view_leads">
        <field name="name">crm.lead.form (in weni_platform_integration)</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="weni_integration_info" string="Weni Integration">
                      <group>
                          <group>
                              <field name="weni_id" />
                              <field name="weni_url_link" />
                          </group>
                      </group>
                </page>
            </notebook>
        </field>
    </record>

