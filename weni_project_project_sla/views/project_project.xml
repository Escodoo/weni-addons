<odoo>
    <record model="ir.ui.view" id="project_project_view_form">
        <field name="name">project.project.form (in project_sla)</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <field name="subtask_project_id" position="after">
                <field name="use_sla" />
                <field name="resource_calendar_id" />
                <field name="sla_deadline" />
            </field>
            <notebook position="inside">
                <page string="SLA Status" name="page_sla_line">
                    <field name="sla_line_ids">
                        <tree>
                            <field name="sla_id" />
                            <field name="deadline" />
                            <field name="reached_date" />
                            <field name="sla_target_stage_id" />
                            <field name="status" />
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <record model="ir.ui.view" id="project_project_view_form_simplified">
        <field name="name">project.project.form_simplified (in project_sla)</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form_simplified" />
        <field name="arch" type="xml">
            <field name="project_status" position="after">
                <field name="use_sla" />
            </field>
        </field>
    </record>
</odoo>