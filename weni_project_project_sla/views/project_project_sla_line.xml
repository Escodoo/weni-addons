<odoo>

    <record model="ir.ui.view" id="view_project_project_sla_line_tree">
        <field name="name">project.project.sla.line.tree</field>
        <field name="model">project.project.sla.line</field>
        <field name="arch" type="xml">
            <tree string="SLA Lines">
                <field name="project_id" />
                <field name="sla_id" />
                <field name="deadline" />
                <field name="reached_date" />
                <field name="sla_target_stage_id" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_project_project_sla_line_tree">
        <field name="name">SLA Lines</field>
        <field name="res_model">project.project.sla.line</field>
        <field name="view_mode">tree,form,pivot</field>
    </record>

    <menuitem
        id="menu_project_project_sla_line_list"
        name="SLA lines"
        parent="project.menu_project_report"
        action="action_project_project_sla_line_tree"
    />

</odoo>