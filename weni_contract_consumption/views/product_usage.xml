<odoo>

    <record model="ir.ui.view" id="product_usage_form_view">
        <field name="name">product.usage.form (in weni_contract_consumption)</field>
        <field name="model">product.usage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <group>
                        <group>
                            <field name="partner_id" />
                            <field name="weni_id" />
                            <field name="project_uid" />
                            <field name="project_name" />
                            <field name="date" />
                        </group>
                        <group>
                            <field name="channel_uuid" />
                            <field name="channel_name" />
                            <field name="channel_type" />
                            <field name="channel_message_count" />
                        </group>
                        <group>
                            <field name="flow_uuid" />
                            <field name="flow_name" />
                            <field name="flow_message_count" />
                            <field name="ia_connect_uuid" />
                            <field name="ia_connect_name" />
                            <field name="ia_connect_prediction_count" />
                        </group>
                        <group>
                            <field name="human_service_department" />
                            <field name="human_service_qrd_service_count" />
                            <field name="human_agent_count" />
                            <field name="login_count" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="product_usage_search_view">
        <field name="name">product.usage.search (in weni_contract_consumption)</field>
        <field name="model">product.usage</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="product_usage_tree_view">
        <field name="name">product.usage.tree (in weni_contract_consumption)</field>
        <field name="model">product.usage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id" />
                <field name="weni_id" />
                <field name="project_name" />
                <field name="date" />
                <field name="channel_name" />
                <field name="channel_type" />
                <field name="flow_name" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="product_usage_pivot_view">
        <field name="name">product.usage.pivot (in weni_contract_consumption)</field>
        <field name="model">product.usage</field>
        <field name="type">pivot</field>
        <field name="arch" type="xml">
            <pivot string="Contract Lines Consumption">
                <field name="partner_id" type="row" />
                <field name="project_name" type="row" />
                <field name="channel_name" type="row" />
                <field name="date" interval="month" type="col" />
                <field name="ia_connect_prediction_count" type="measure" />
                <field name="active_user_count" type="measure" />
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="product_usage_graph_view">
        <field name="name">product.usage.graph (in weni_contract_consumption)</field>
        <field name="model">product.usage</field>
        <field name="arch" type="xml">
            <graph string="Product Usage Consumption" type="pie">
                <field name="project_name" type="row" />
                <field name="partner_id" type="row" />
                <field name="date" interval="month" type="col" />
                <field name="active_user_count" type="measure" />
            </graph>
        </field>
    </record>

    <record model="ir.actions.act_window" id="product_usage_act_window">
        <field name="name">Product Usage</field>
        <field name="res_model">product.usage</field>
        <field name="view_mode">tree,pivot,graph,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="product_usage_menu">
        <field name="name">Product Usage</field>
        <field name="parent_id" ref="sale.menu_sale_report" />
        <field name="action" ref="product_usage_act_window" />
        <field name="sequence" eval="999" />
    </record>

</odoo>
