<odoo>

    <record model="ir.ui.view" id="res_partner_form_view">
        <field name="name">res.partner.project.buttons (in weni_project_custom)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority" eval="6"/>
        <field name="groups_id" eval="[(4, ref('project.group_project_user'))]"/>
        <field name="arch" type="xml">
            <button name="toggle_active" position="before">
                <button class="oe_stat_button" type="action" name="%(project.open_view_project_all)d"
                    context="{'search_default_partner_id': active_id, 'default_partner_id': active_id}" attrs="{'invisible': [('task_count', '=', 0)]}"
                    icon="fa-puzzle-piece">
                    <field string="Projects" name="project_count" widget="statinfo"/>
                </button>
            </button>
        </field>
    </record>

</odoo>
