<odoo>

    <record model="ir.ui.view" id="res_partner_form_view">
        <field name="name">res.partner.form (in weni_partner_nps)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="NPS" attrs="{'invisible': [('company_type','!=', 'company')]}">
                    <field name="weni_nps_ids" context="{'default_partner_id': active_id}" />
                </page>
            </notebook>

            <xpath expr="//div[@name='button_box']" position="inside" >
                <button class="oe_stat_button" type="object"
                        icon="fa-area-chart"
                        name="action_view_weni_npss"
                        context="{'default_partner_id': active_id}"
                        attrs="{'invisible': [('company_type','!=', 'company')]}"
                        help="NPS">
                        <field string="Current NPS" name="weni_current_nps" widget="statinfo"/>
                </button>
            </xpath>

        </field>
    </record>

