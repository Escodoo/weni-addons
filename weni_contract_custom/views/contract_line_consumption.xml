<odoo>

    <record model="ir.ui.view" id="contract_line_consumption_form_view">
        <field name="name">contract.line.consumption.form (in weni_contract_custom)</field>
        <field name="model">contract.line.consumption</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="contract_line_id"/>
                        <field name="consumption_date"/>
                        <field name="consumption_quantity"/>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="contract_line_consumption_search_view">
        <field name="name">contract.line.consumption.search (in weni_contract_custom)</field>
        <field name="model">contract.line.consumption</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="contract_line_consumption_tree_view">
        <field name="name">contract.line.consumption.tree (in weni_contract_custom)</field>
        <field name="model">contract.line.consumption</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="contract_line_id"/>
                <field name="consumption_date"/>
                <field name="consumption_quantity"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="contract_line_consumption_act_window">
        <field name="name">Contract Line Consumption</field>
        <field name="res_model">contract.line.consumption</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="contract_line_consumption_menu">
        <field name="name">Contract Line Consumption</field>
        <field name="parent_id" ref="contract.menu_config_contract"/>
        <field name="action" ref="contract_line_consumption_act_window"/>
        <field name="sequence" eval="16"/>
    </record>

</odoo>
